<Window x:Class="HLD_Vision_GUI.View.CreateRecipeDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Loaded="Window_Loaded"
        mc:Ignorable="d" Title="Input a new recipe name" KeyDown="Window_KeyDown" Height="92" Width="294">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="tbReference" Grid.Row="0" Grid.Column="0" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox Name="tbNewRecipe" Grid.Row="1" Grid.Column="0" VerticalContentAlignment="Center"/>
        <Button Grid.Row="0" Grid.Column="1" Content="OK" Click="Create_Click"/>
        <Button Grid.Row="1" Grid.Column="2" Content="CANCEL" Click="Cancel_Click"/>
    </Grid>
</Window>
